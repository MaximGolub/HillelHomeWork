html
  head
    title Main
    link(rel="stylesheet" href="/css/main.min.css?cache_bust=123")
    link(rel="stylesheet" href="/css/swiper-bundle.min.css")
  body
  include templates/header.pug

  main.page.container

    <!-- block_dataStorage -->

      section.datastorage__container
        .datastorage__title 
          |Save your data
          br
          |storage here.
        .datastorage__content
          p.datastorage__text.text Data Warehouse is a data storage area that has been tested for security, so you can store your data here safely but not be afraid of being stolen by others.
          a(href="#").datastorage__btn.btn_learnMore
            span Learn more
        .datastorage__img
          img(src='./assets/images/image_datastorage.png' alt="")

    <!-- block_highLevel -->

      section.highlevel__container 
        .highlevel__img
          img(src='./assets/images/image_2.png' alt="")
        .highlevel__content 
          .highlevel__title.title We are a high-level data storage bank
          .highlevel__text.text
            p The place to store various data that you can access at any time through the internet and where you can carry it. This very flexible storage area has a high level of security. To enter into your own data you must enter the password that you created when you registered in this Data Warehouse. 

    <!-- block_features -->

      mixin article(title, text, path)
        .article__image 
          img(src=path, alt="")
        .article__wrapper
          h1.article__wrapper__title= title
          p.article__wrapper__text= text
          .article__wrapper__link
            a(href='#') 
              span Learn more
              img(src='./assets/images/arrow.png' alt="").arrow

      section.features__container 
        .features__title.title Features
        .features__text.text
          p 
            | Some of the features and advantages that we provide for those of you
            br
            | who store data in this Data Warehouse.
        .features__article
          .article.bgSearchData
            +article('Search Data', 'Dont worry if your data is very large, the Data Warehoue provides a search engine, which is useful for making it easier to find data effectively saving time.', './assets/images/image_3.png')
          .article.bgHoursAccess
            +article('24 Hours Access', 'Access is given 24 hours a full morning to night and meet again in the morning, giving you comfort when you need data when urgent.', './assets/images/image_4.png')
          .article.bgPrintOut
            +article('Print Out', 'Print out service gives you convenience if someday you need print data, just edit it all and just print it.', './assets/images/image_5.png')
          .article.bgSecurityCode
            +article('Security Code', 'Data Security is one of our best facilities. Allows for your files to be safer. The file can be secured with a code or password that you created, so only you can open the file.', './assets/images/image_6.png')

    <!-- block_testimonials -->

      mixin testimonials(title, subtitle, text, path)
        div.swiper-slide__container
          div.swiper-slide__image
            img(src=path alt="")
          div.swiper-slide__content
            p.swiper-slide__title= title
            span.swiper-slide__subtitle= subtitle
            p.swiper-slide__text= text

      section.testimonials__container
            .testimonials__wrapper
              h2.testimonials__title.title Testimonials
              
              .swiper-slider
                .swiper-wrapper
                  .swiper-slide
                    +testimonials('John Fang', 'wordfaang.com', 'Suspendisse ultrices at diam lectus nullam. Nisl, sagittis viverra enim erat tortor ultricies massa turpis. Arcu pulvinar aenean nam laoreet nulla.', './assets/images/image_slider1.png')
                  .swiper-slide
                    +testimonials('Jeny Doe', 'UX Engineer', 'Suspendisse ultrices at diam lectus nullam. Nisl, sagittis viverra enim erat tortor ultricies massa turpis. Arcu pulvinar aenean nam laoreet nulla.', './assets/images/image_slider2.png')
                  .swiper-slide
                    +testimonials('William', 'Web Designer', 'Suspendisse ultrices at diam lectus nullam. Nisl, sagittis viverra enim erat tortor ultricies massa turpis. Arcu pulvinar aenean nam laoreet nulla.', './assets/images/image_slider3.png')

              .swiper-controls.controls
                .controls__pagination
                .controls__navigation
                  button.controls__button-prev
                  button.controls__button-next

  include templates/footer.pug
  script(src='/js/main.min.js?cache_bust=123')
  script(src='/js/swiper-bundle.min.js')